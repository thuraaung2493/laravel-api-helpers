{
  "name": "thuraaung2493/laravel-api-helpers",
  "description": "A simple package for creating API endpoints with Laravel.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "role": "Developer",
      "name": "thuraaung2493",
      "email": "thuraaung2493@gmail.com",
      "homepage": "http://thuraaung2493.github.io/"
    }
  ],
  "autoload": {
    "psr-4": {
      "Thuraaung\\ApiHelpers\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Thuraaung\\ApiHelpers\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Thuraaung\\ApiHelpers\\Providers\\PackageServiceProvider"
      ],
      "aliases": [
        "Headers"
      ]
    }
  },
  "require": {
    "php": "^8.2",
    "illuminate/support": "^10.12",
    "laravel/sanctum": "^3.2",
    "thecodingmachine/safe": "^2.5"
  },
  "require-dev": {
    "laravel/pint": "^1.10",
    "nunomaduro/larastan": "^2.0",
    "nunomaduro/mock-final-classes": "^1.2",
    "orchestra/testbench": "^8.5",
    "pestphp/pest": "^2.6",
    "thecodingmachine/phpstan-safe-rule": "^1.2"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2.4"
    },
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@php vendor/bin/testbench package:discover --ansi"
    ],
    "pint": [
      "./vendor/bin/pint"
    ],
    "analyse": [
      "./vendor/bin/phpstan analyse --memory-limit=2G"
    ],
    "test": [
      "./vendor/bin/pest --parallel"
    ],
    "prepare": [
      "@pint",
      "@analyse",
      "@test"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
